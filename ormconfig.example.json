{
  "type": "postgres",
  "url": "postgres://{username}:{password}@localhost:5432/frozen-pants",
  "entities": ["src/**/*.entity{.ts,.js}"],

  "synchronize": false,

  "migrationsRun": false,
  "logging": true,
  "logger": "file",
  "retryAttempts": 10,

  "migrations": ["src/migrations/**/*{.ts,.js}"],
  "cli": {
    "migrationsDir": "src/migrations"
  }
}
